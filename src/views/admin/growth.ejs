                        var trendChart = new ApexCharts(document.querySelector("#acquisitionTrend"), acquisitionTrend);
                        trendChart.render();

                        // ---------- Toggle Cost Metrics ----------
                        document.querySelector('#toggleCostMetrics').addEventListener('change', function (e) {
                            if (e.target.checked) {
